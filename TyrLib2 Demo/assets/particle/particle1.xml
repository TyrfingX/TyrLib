    	</Factory>
    </Factories>
    <Emitters>
        <Emitter amount="1" interval="0.01" factory="factory1">
            <Position x="-3" y="0" z="0"></Position>
            <Velocity x="0" y="20" z="0"></Velocity>
            <RandomVelocity x="0.7" y="0.1" z="0.5"></RandomVelocity>
            <RandomPosition x="4" y="4" z="4"></RandomPosition>
        </Emitter>
        <Emitter amount="5" interval="0.01" factory="factory1">
