            <MinLifeTime value="2"></MinLifeTime>
            <ColorChange r="1" g="-0.5" b="0" a="-0.32"></ColorChange>
        </Affector>
        <Affector type="ColorChanger">
            <MinLifeTime value="3"></MinLifeTime>
            <ColorChange r="0" g="1" b="1" a="0"></ColorChange>
        </Affector>
        <Affector type="ForceAffector">
            <HomogenField x="16" y="-9" z="5" function="sin"></HomogenField>
        </Affector>
        <Affector type="ForceAffector">
            <RadialField radialDependency="1" power="-900"></RadialField>
        </Affector>
    </Affectors>
</ParticleSystem>